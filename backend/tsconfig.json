{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    /* Backend sp√©cifique */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "incremental": true,
    
    /* Build backend */
    "outDir": "./dist",
    "rootDir": "./src",
    
    /* Paths backend */
    "paths": {
      "@shared/*": ["../shared/*"],
      "@backend/*": ["./src/*"],
      "@prisma/*": ["./prisma/*"]
    }
  },
  "include": [
    "src/**/*",
    "prisma/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}